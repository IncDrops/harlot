
{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "runtime": "nodejs20",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" install"
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "apphosting": {
    "backends": [
      {
        "id": "pollitago-app",
        "region": "us-central1",
        "runConfig": {
          "maxInstances": 1
        }
      }
    ]
  }
}
