rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // === User Uploads (e.g. avatars, receipts)
    match /user_uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null &&
        request.auth.uid == userId;
    }

    // === Poll Images (public)
    match /poll_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // === Tip Proofs (optional)
    match /tip_receipts/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null &&
        request.auth.uid == userId;
    }
  }
}
