
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own profile, and any user can read public profiles.
    // Users can only write to their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;

      // Notifications are private to each user.
      match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Analyses can only be accessed by authenticated users.
    // In a real scenario, this would be locked down to specific users/teams.
    match /analyses/{analysisId} {
      allow read, create, update: if request.auth != null;
      allow delete: if request.auth.uid == resource.data.ownerId; // Or admin role
    }

    // Messages can only be read by participants and created by the sender.
    match /messages/{messageId} {
      allow read: if request.auth.uid in resource.data.participants;
      allow create: if request.auth.uid == request.resource.data.senderId;
    }
    
    // Fallback rule: Deny all other reads/writes by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
