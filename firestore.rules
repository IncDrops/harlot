rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read/write their own profile, but only read others.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Polls can be read by anyone.
    // Only authenticated users can create polls.
    // Only the original creator can update their poll.
    match /polls/{pollId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.creatorId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.creatorId;

      // Rules for the 'comments' subcollection within each poll
      match /comments/{commentId} {
        // Anyone can read comments
        allow read: if true;
        // Only authenticated users can create comments
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // Users can only update or delete their own comments
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }

    // Default deny all other writes
    match /{document=**} {
      allow write: if false;
    }
  }
}
