rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read their own user document
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Allow users to manage their own todos and integrations
    match /users/{userId}/{collection}/{docId} {
      allow read, write, delete: if request.auth.uid == userId;
    }
    
    // Allow users to create analyses and read their own
    match /analyses/{analysisId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth.uid == resource.data.userId;
    }

    // Allow users to read/write their own messages
    match /messages/{messageId} {
        allow read, create: if request.auth != null && request.auth.uid in resource.data.participants;
    }

    // Allow public read for app-data like the stock ticker
    match /app-data/{docId} {
        allow read: if true;
        allow write: if false; // Only backend processes should write here
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
